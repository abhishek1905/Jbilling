<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="com.appDirect.product.jBilling.Product" table="product">
      <meta attribute="class-description">
         This class contains the employee detail. 
      </meta>
      <id name="productId" type="int" column="productId">
      </id>
      <property name="productName" column="productName" type="string"/>
      <property name="basePrice" column="basePrice" type="double"/>
   </class>
</hibernate-mapping>